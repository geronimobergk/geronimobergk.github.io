{% assign has_actions = false %}
{% if page.github or page.paper or page.pdf or page.demo or page.dataset or page.slides or page.video or page.doi %}
  {% assign has_actions = true %}
{% endif %}

{% if has_actions %}
  <div class="project-actions" aria-label="Project links">
    {% if page.github %}
      <a class="project-action project-action--github" href="{{ page.github }}" target="_blank" rel="noopener noreferrer">Code</a>
    {% endif %}
    {% if page.paper %}
      {% if page.paper contains '://' %}
        {% assign paper_href = page.paper %}
      {% else %}
        {% assign paper_href = page.paper | relative_url %}
      {% endif %}
      <a class="project-action" href="{{ paper_href }}" target="_blank" rel="noopener noreferrer">Paper</a>
    {% endif %}
    {% if page.pdf %}
      {% if page.pdf contains '://' %}
        {% assign pdf_href = page.pdf %}
      {% else %}
        {% assign pdf_href = page.pdf | relative_url %}
      {% endif %}
      <a class="project-action" href="{{ pdf_href }}" target="_blank" rel="noopener noreferrer">PDF</a>
    {% endif %}
    {% if page.demo %}
      {% if page.demo contains '://' %}
        {% assign demo_href = page.demo %}
      {% else %}
        {% assign demo_href = page.demo | relative_url %}
      {% endif %}
      <a class="project-action" href="{{ demo_href }}" target="_blank" rel="noopener noreferrer">Demo</a>
    {% endif %}
    {% if page.dataset %}
      {% if page.dataset contains '://' %}
        {% assign dataset_href = page.dataset %}
      {% else %}
        {% assign dataset_href = page.dataset | relative_url %}
      {% endif %}
      <a class="project-action" href="{{ dataset_href }}" target="_blank" rel="noopener noreferrer">Dataset</a>
    {% endif %}
    {% if page.slides %}
      {% if page.slides contains '://' %}
        {% assign slides_href = page.slides %}
      {% else %}
        {% assign slides_href = page.slides | relative_url %}
      {% endif %}
      <a class="project-action" href="{{ slides_href }}" target="_blank" rel="noopener noreferrer">Slides</a>
    {% endif %}
    {% if page.video %}
      {% if page.video contains '://' %}
        {% assign video_href = page.video %}
      {% else %}
        {% assign video_href = page.video | relative_url %}
      {% endif %}
      <a class="project-action" href="{{ video_href }}" target="_blank" rel="noopener noreferrer">Video</a>
    {% endif %}
    {% if page.doi %}
      {% if page.doi contains '://' %}
        {% assign doi_href = page.doi %}
      {% else %}
        {% assign doi_href = 'https://doi.org/' | append: page.doi %}
      {% endif %}
      <a class="project-action" href="{{ doi_href }}" target="_blank" rel="noopener noreferrer">DOI</a>
    {% endif %}
  </div>
{% endif %}
