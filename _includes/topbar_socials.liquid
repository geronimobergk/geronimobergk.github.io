{% assign topbar_socials = site.data.socials %}
{% if topbar_socials %}
  {% assign has_topbar_socials = topbar_socials.linkedin_username
    or topbar_socials.scholar_userid
    or topbar_socials.github_username
    or topbar_socials.email %}

  {% if has_topbar_socials %}
    {% assign topbar_socials_wrapper_class = include.wrapper_class | default: 'd-none d-md-flex align-items-center' %}
    <div class="navbar-topbar-socials {{ topbar_socials_wrapper_class }}">
      {% if topbar_socials.email %}
        <a
          class="navbar-topbar-socials__link"
          href="mailto:{{ topbar_socials.email }}"
          title="Email"
        >
          <i class="fa-solid fa-envelope" aria-hidden="true"></i>
          <span class="sr-only">Email</span>
        </a>
      {% endif %}
      {% if topbar_socials.linkedin_username %}
        <a
          class="navbar-topbar-socials__link"
          href="https://www.linkedin.com/in/{{ topbar_socials.linkedin_username }}"
          title="LinkedIn"
          target="_blank"
          rel="noopener"
        >
          <i class="fa-brands fa-linkedin" aria-hidden="true"></i>
          <span class="sr-only">LinkedIn</span>
        </a>
      {% endif %}
      {% if topbar_socials.scholar_userid %}
        <a
          class="navbar-topbar-socials__link"
          href="https://scholar.google.com/citations?user={{ topbar_socials.scholar_userid }}"
          title="Google Scholar"
          target="_blank"
          rel="noopener"
        >
          <i class="ai ai-google-scholar" aria-hidden="true"></i>
          <span class="sr-only">Google Scholar</span>
        </a>
      {% endif %}
      {% if topbar_socials.github_username %}
        <a
          class="navbar-topbar-socials__link"
          href="https://github.com/{{ topbar_socials.github_username }}"
          title="GitHub"
          target="_blank"
          rel="noopener"
        >
          <i class="fa-brands fa-github" aria-hidden="true"></i>
          <span class="sr-only">GitHub</span>
        </a>
      {% endif %}
    </div>
  {% endif %}
{% endif %}
