<div class="col mb-4">
  <a href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      <div class="row no-gutters">
        {% if project.img %}
          <div class="col-md-6">
            {% include figure.liquid loading="eager" path=project.img sizes="(min-width: 768px) 156px, 50vw" alt="project thumbnail" class="card-img" %}
          </div>
        {% endif %}
        <div class="{% if project.img %}col-md-6{% else %}col-md-12{% endif %}">
          <div class="card-body project-card__body">
            {% if project.kicker %}
              <p class="project-card__kicker page-kicker">{{ project.kicker }}</p>
            {% elsif project.summary == null and project.description %}
              <p class="project-card__kicker page-kicker">{{ project.description }}</p>
            {% endif %}
            <h3 class="card-title page-title page-title--card project-card__title">{{ project.title }}</h3>
            {% if project.summary %}
              <p class="project-card__summary">{{ project.summary }}</p>
            {% elsif project.kicker and project.description %}
              <p class="project-card__summary">{{ project.description }}</p>
            {% endif %}
            <div class="project-card__links">
              {% include project_links.liquid item=project wrapper_class="project-links--card" show_stars=true aria_label="Project links" %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
